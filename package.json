{
  "name": "viplife.nl",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "7.2.1",
    "@types/jest": "24.9.1",
    "@types/node": "12.19.16",
    "@types/react": "16.14.3",
    "@types/react-dom": "16.9.10",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-scripts": "3.4.4",
    "typescript": "3.9.7"
  },
  "scripts": {
    "start": "concurrently \"npm:css-watch\" \"npm:react-watch\"",
    "build": "yarn css-build && yarn react-build",
    "dist": "cross-env NODE_ENV=production yarn build",
    "css-watch": "postcss src/assets/tailwind.css -o src/assets/main.css -w",
    "css-build": "postcss src/assets/tailwind.css -o src/assets/main.css",
    "react-watch": "react-scripts start",
    "react-build": "react-scripts build && react-snapshot",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "5.3.0",
    "cross-env": "7.0.3",
    "postcss": "8.2.5",
    "postcss-cli": "8.3.1",
    "postcss-import": "14.0.0",
    "postcss-preset-env": "6.7.0",
    "react-snapshot": "1.3.0",
    "tailwindcss": "2.0.3"
  }
}
